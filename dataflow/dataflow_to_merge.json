{
	"name": "dataflow_to_merge",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_cases",
						"type": "DatasetReference"
					},
					"name": "nextcaseSource"
				},
				{
					"dataset": {
						"referenceName": "ds_casemapprevious",
						"type": "DatasetReference"
					},
					"name": "previousCaseSource"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "dsCaseMap",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "unionCases"
				},
				{
					"name": "removeDuplicate"
				}
			],
			"scriptLines": [
				"source(output(",
				"          caseID as string,",
				"          caseDesc as string,",
				"          isActive as string,",
				"          isRestrictedAccess as string,",
				"          openDate as string,",
				"          eventType as string,",
				"          userIDCreator as string,",
				"          note as string,",
				"          hoduntil as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> nextcaseSource",
				"source(output(",
				"          caseID as string,",
				"          caseDesc as string,",
				"          isActive as string,",
				"          isRestrictedAccess as string,",
				"          openDate as string,",
				"          eventType as string,",
				"          userIDCreator as string,",
				"          note as string,",
				"          hoduntil as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> previousCaseSource",
				"nextcaseSource, previousCaseSource union(byName: true)~> unionCases",
				"unionCases aggregate(groupBy(caseID),",
				"     each(match(name != 'caseID'), $$ = first($$))) ~> removeDuplicate",
				"removeDuplicate sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          caseID as string,",
				"          caseDesc as string,",
				"          isActive as string,",
				"          isRestrictedAccess as string,",
				"          openDate as string,",
				"          eventType as string,",
				"          userIDCreator as string,",
				"          note as string,",
				"          hoduntil as string",
				"     ),",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}