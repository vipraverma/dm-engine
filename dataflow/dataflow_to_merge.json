{
	"name": "dataflow_to_merge",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_cases",
						"type": "DatasetReference"
					},
					"name": "caseSource"
				},
				{
					"dataset": {
						"referenceName": "ds_casemapprevious",
						"type": "DatasetReference"
					},
					"name": "previousCaseSource"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "unionCases"
				},
				{
					"name": "removeDuplicate"
				}
			],
			"scriptLines": [
				"source(output(",
				"          caseID as string,",
				"          caseDesc as string,",
				"          isActive as string,",
				"          isRestrictedAccess as string,",
				"          openDate as string,",
				"          eventType as string,",
				"          userIDCreator as string,",
				"          note as string,",
				"          hoduntil as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> caseSource",
				"source(output(",
				"          caseID as string,",
				"          caseDesc as string,",
				"          isActive as string,",
				"          isRestrictedAccess as string,",
				"          openDate as string,",
				"          eventType as string,",
				"          userIDCreator as string,",
				"          note as string,",
				"          hoduntil as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> previousCaseSource",
				"caseSource, previousCaseSource union(byName: true)~> unionCases",
				"unionCases aggregate(groupBy(caseID),",
				"     each(match(name != 'caseID'), $$ = first($$))) ~> removeDuplicate"
			]
		}
	}
}