								"sink": {
									"name": "email",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['firstname']"
								},
								"sink": {
									"name": "firstname",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['lastname']"
								},
								"sink": {
									"name": "lastname",
									"type": "String"
								}
							}
						],
