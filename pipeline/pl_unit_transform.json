						"requestMethod": "GET",
						"additionalHeaders": {
							"Authorization": {
								"value": "@variables('access_token')",
								"type": "Expression"
							},
							"X-Tenant-Id": "dvmspoc"
						},
						"paginationRules": {
							"supportRFC5988": "true"
						}
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
